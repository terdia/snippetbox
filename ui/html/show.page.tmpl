{{template "base" .}}

{{define "title"}}
    {{.Snippet.Title}}Snippet #{{.Snippet.ID}}
{{end}}

{{define "main"}}
    {{with .Snippet }}
        <div class='snippet'>
            <div class='metadata'>
                <strong>{{.Title}}</strong>
                <span>#{{.ID}}</span>
            </div>
            
            <pre><code>{{.Content}}</code></pre>
            <div class='metadata'>
                <time>Created: {{toHumanReadable .Created}}</time>
                <time>Expires: {{toHumanReadable .Expires}}</time>
            </div>
        </div>
    {{ end }}
{{end}}